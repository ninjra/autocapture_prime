{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://autocapture.local/schemas/ui_graph.schema.json",
  "title": "UI Graph",
  "type": "object",
  "required": [
    "schema_version",
    "frame_id",
    "nodes"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "frame_id": {
      "type": "string",
      "minLength": 1
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/node"
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/edge"
      },
      "default": []
    }
  },
  "$defs": {
    "bbox": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "items": {
        "type": "integer",
        "minimum": 0
      }
    },
    "node": {
      "type": "object",
      "required": [
        "node_id",
        "kind",
        "bbox"
      ],
      "properties": {
        "node_id": {
          "type": "string",
          "minLength": 1
        },
        "kind": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "bbox": {
          "$ref": "#/$defs/bbox"
        },
        "children": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        }
      },
      "additionalProperties": true
    },
    "edge": {
      "type": "object",
      "required": [
        "from",
        "to",
        "relation"
      ],
      "properties": {
        "from": {
          "type": "string",
          "minLength": 1
        },
        "to": {
          "type": "string",
          "minLength": 1
        },
        "relation": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}

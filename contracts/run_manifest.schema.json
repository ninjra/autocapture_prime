{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Run Manifest",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "record_type": {
      "type": "string"
    },
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "run_id": {
      "type": "string"
    },
    "ts_utc": {
      "type": "string"
    },
    "determinism": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "timezone": {
          "type": "string"
        },
        "locale": {
          "type": "string"
        },
        "rng": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "strict": {
              "type": "boolean"
            },
            "run_seed": {
              "type": "integer"
            },
            "run_seed_hex": {
              "type": "string"
            }
          },
          "required": [
            "enabled",
            "strict",
            "run_seed",
            "run_seed_hex"
          ]
        }
      },
      "required": [
        "timezone",
        "locale",
        "rng"
      ]
    }
  },
  "required": [
    "record_type",
    "schema_version",
    "run_id",
    "ts_utc",
    "determinism"
  ]
}


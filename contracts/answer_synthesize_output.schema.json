{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "backend": { "type": "string" },
    "model": { "type": "string" },
    "error": { "type": "string" },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "text": { "type": "string" },
          "evidence": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "record_id": { "type": "string" },
                "quote": { "type": "string" }
              },
              "required": ["record_id", "quote"]
            }
          }
        },
        "required": ["text", "evidence"]
      }
    }
  },
  "required": ["claims"]
}

